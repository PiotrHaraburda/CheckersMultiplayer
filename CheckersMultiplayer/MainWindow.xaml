<Window x:Class="CheckersMultiplayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CheckersMultiplayer"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="MainApp" Height="513" Width="800">
    <Grid Margin="0,0,0,3">
        <DockPanel x:Name="mainMenuPanel" LastChildFill="False" Visibility="Visible">
            <Label Content="Checkers Multiplayer" DockPanel.Dock="Top" Height="36" Margin="0,60,0,0" FontWeight="Bold" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Button x:Name="multiplayerButton" Content="Play Multiplayer" DockPanel.Dock="Top" Height="31" Width="120" Margin="0,40,0,0" Click="multiplayerButton_Click"/>
            <Button Content="Your Account" DockPanel.Dock="Top" Height="31" Width="120" Margin="0,20,0,0"/>
            <Button Content="Settings" DockPanel.Dock="Top" Height="31" Width="120" Margin="0,20,0,0"/>
            <Button x:Name="logoutButton" Content="Logout" DockPanel.Dock="Top" Height="31" Margin="0,20,0,0" Width="121" Click="logoutButton_Click"/>
            <Grid Width="100"/>
        </DockPanel>
        <DockPanel x:Name="multiplayerPanel" LastChildFill="False" Visibility="Collapsed" >
            <Label Content="Multiplayer Mode" DockPanel.Dock="Top" Height="31" Margin="0,60,0,0" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center"/>
            <Button x:Name="createLobbyButton" Content="Create Lobby" DockPanel.Dock="Top" Height="33" Margin="0,30,0,0" Width="144" Click="createLobbyButton_Click"/>
            <Button x:Name="joinLobbyButton" Content="Join Lobby" DockPanel.Dock="Top" Height="33" Width="145" Margin="0,20,0,0" Click="joinLobbyButton_Click"/>
            <Button Content="Statistics" DockPanel.Dock="Top" Height="33" Margin="0,20,0,0" Width="146"/>
            <Button x:Name="quitMultiplayerButton" Content="Go Back" DockPanel.Dock="Top" Height="33" Width="146" Margin="0,20,0,0" Click="quitMultiplayerButton_Click"/>
        </DockPanel>
        <Grid x:Name="createLobbyGrid" Visibility="Collapsed">
            <Label Content="Creating multiplayer lobby" HorizontalAlignment="Center" Margin="0,43,0,0" VerticalAlignment="Top" FontSize="18" FontWeight="Bold"/>
            <Label Content="Room name:&#xD;&#xA;" HorizontalAlignment="Left" Margin="255,111,0,0" VerticalAlignment="Top" Height="27"/>
            <TextBox x:Name="roomNameTextBox" HorizontalAlignment="Left" Margin="379,116,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="159"/>
            <Label Content="Room password:" HorizontalAlignment="Left" Margin="255,150,0,0" VerticalAlignment="Top" Height="27"/>
            <TextBox x:Name="roomPasswordTextBox" HorizontalAlignment="Left" Margin="379,155,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="159"/>
            <Button x:Name="startGameButton" Content="Start Game" HorizontalAlignment="Center" Margin="0,364,0,0" VerticalAlignment="Top" Width="106" Height="30" Click="startGameButton_Click"/>
            <Label x:Name="waitingForOpponentsLabel" Content="Waiting for opponents..." HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,232,0,0"/>
            <Label x:Name="opponentLabel" Content="Your opponent:" HorizontalAlignment="Left" Margin="317,290,0,0" VerticalAlignment="Top"/>
            <Button x:Name="quitLobbyCreation" Content="Return" HorizontalAlignment="Left" Margin="34,42,0,0" VerticalAlignment="Top" Click="quitLobbyCreation_Click" Width="59" Height="26"/>
            <Button x:Name="saveRoomInfoButton" Content="Save" HorizontalAlignment="Center" Margin="0,197,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.202,-2.202" Width="68" Click="saveRoomInfoButton_Click"/>
            <Label x:Name="opponentNameLabel" Content="None" HorizontalAlignment="Left" Margin="414,290,0,0" VerticalAlignment="Top"/>
        </Grid>
        <Grid x:Name="gameRoomsGrid" Visibility="Collapsed">
            <Label Content="Active Game Rooms" HorizontalAlignment="Center" Margin="0,31,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="18"/>
            <ListBox x:Name="gameRoomsListBox" Margin="136,80,136,114"/>
            <Button x:Name="quitGameRoomsButton" Content="Return" HorizontalAlignment="Left" Margin="33,38,0,0" VerticalAlignment="Top" Width="53" Click="quitGameRoomsButton_Click"/>
            <Button x:Name="joinGameRoomButton" Content="Join" HorizontalAlignment="Center" Margin="0,419,0,0" VerticalAlignment="Top" Width="110" Click="joinGameRoomButton_Click"/>
        </Grid>
        <Grid x:Name="roomPasswordGrid" Visibility="Collapsed">
            <Label Content="Enter the room password" HorizontalAlignment="Center" Margin="0,129,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="18"/>
            <TextBox x:Name="enterRoomPasswordTextBox" HorizontalAlignment="Center" Margin="0,188,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" Height="29" FontSize="16"/>
            <Button x:Name="quitRoomPasswordGridButton" Content="Cancel" HorizontalAlignment="Left" Margin="314,263,0,0" VerticalAlignment="Top" Height="30" Width="64" Click="quitRoomPasswordGridButton_Click"/>
            <Button x:Name="checkGameRoomPasswordButton" Content="Join" HorizontalAlignment="Left" Margin="425,263,0,0" VerticalAlignment="Top" Height="30" Width="57" Click="checkGameRoomPasswordButton_Click"/>
        </Grid>
        <Grid x:Name="gameGrid" Visibility="Collapsed">
            <Image HorizontalAlignment="Left" Height="468" Margin="10,10,0,10" VerticalAlignment="Top" Width="468" Source="/Wood-2.png"/>
            <Image Cursor="Hand" HorizontalAlignment="Left" Height="36" Margin="63,108,0,0" VerticalAlignment="Top" Width="36" Source="/images/blackPawn.png"/>
            <Image Cursor="Hand" HorizontalAlignment="Left" Height="36" Margin="63,389,0,0" VerticalAlignment="Top" Width="36" Source="/images/whitePawn.png"/>
            <Image Cursor="Hand" HorizontalAlignment="Left" Height="36" Margin="63,295,0,0" VerticalAlignment="Top" Width="36" Source="/images/whitePawn.png"/>
            <Image Cursor="Hand" HorizontalAlignment="Left" Height="36" Margin="109,156,0,0" VerticalAlignment="Top" Width="36" Source="/images/blackPawn.png"/>
            <Image Cursor="Hand" HorizontalAlignment="Left" Height="36" Margin="109,63,0,0" VerticalAlignment="Top" Width="36" Source="/images/blackPawn.png"/>
            <Image Cursor="Hand" HorizontalAlignment="Left" Height="36" Margin="156,108,0,0" VerticalAlignment="Top" Width="36" Source="/images/blackPawn.png"/>
            <Image Cursor="Hand" HorizontalAlignment="Left" Height="36" Margin="203,63,0,0" VerticalAlignment="Top" Width="36" Source="/images/blackPawn.png"/>
            <Image Cursor="Hand" HorizontalAlignment="Left" Height="36" Margin="249,108,0,0" VerticalAlignment="Top" Width="36" Source="/images/blackPawn.png"/>
            <Image Cursor="Hand" HorizontalAlignment="Left" Height="36" Margin="203,156,0,0" VerticalAlignment="Top" Width="36" Source="/images/blackPawn.png"/>
            <Image Cursor="Hand" HorizontalAlignment="Left" Height="36" Margin="297,63,0,0" VerticalAlignment="Top" Width="36" Source="/images/blackPawn.png"/>
            <Image Cursor="Hand" HorizontalAlignment="Left" Height="36" Margin="343,108,0,0" VerticalAlignment="Top" Width="36" Source="/images/blackPawn.png"/>
            <Image Cursor="Hand" HorizontalAlignment="Left" Height="36" Margin="297,156,0,0" VerticalAlignment="Top" Width="36" Source="/images/blackPawn.png"/>
            <Image Cursor="Hand" HorizontalAlignment="Left" Height="36" Margin="389,63,0,0" VerticalAlignment="Top" Width="36" Source="/images/blackPawn.png"/>
            <Image Cursor="Hand" HorizontalAlignment="Left" Height="36" Margin="389,156,0,0" VerticalAlignment="Top" Width="36" Source="/images/blackPawn.png"/>
            <Image Cursor="Hand" HorizontalAlignment="Left" Height="36" Margin="156,295,0,0" VerticalAlignment="Top" Width="36" Source="/images/whitePawn.png"/>
            <Image Cursor="Hand" HorizontalAlignment="Left" Height="36" Margin="109,342,0,0" VerticalAlignment="Top" Width="36" Source="/images/whitePawn.png"/>
            <Image Cursor="Hand" HorizontalAlignment="Left" Height="36" Margin="156,389,0,0" VerticalAlignment="Top" Width="36" Source="/images/whitePawn.png"/>
            <Image Cursor="Hand" HorizontalAlignment="Left" Height="36" Margin="249,295,0,0" VerticalAlignment="Top" Width="36" Source="/images/whitePawn.png"/>
            <Image Cursor="Hand" HorizontalAlignment="Left" Height="36" Margin="203,342,0,0" VerticalAlignment="Top" Width="36" Source="/images/whitePawn.png"/>
            <Image Cursor="Hand" HorizontalAlignment="Left" Height="36" Margin="249,389,0,0" VerticalAlignment="Top" Width="36" Source="/images/whitePawn.png"/>
            <Image Cursor="Hand" HorizontalAlignment="Left" Height="36" Margin="343,295,0,0" VerticalAlignment="Top" Width="36" Source="/images/whitePawn.png"/>
            <Image Cursor="Hand" HorizontalAlignment="Left" Height="36" Margin="297,342,0,0" VerticalAlignment="Top" Width="36" Source="/images/whitePawn.png"/>
            <Image Cursor="Hand" HorizontalAlignment="Left" Height="36" Margin="343,389,0,0" VerticalAlignment="Top" Width="36" Source="/images/whitePawn.png"/>
            <Image Cursor="Hand" HorizontalAlignment="Left" Height="36" Margin="389,342,0,0" VerticalAlignment="Top" Width="36" Source="/images/whitePawn.png"/>
        </Grid>
    </Grid>
</Window>
