        mc:Ignorable="d"
        Title="MainWindow" Height="578.125" Width="1178.125">
    <Grid>
        <Button x:Name="registerButton" Content="Register" HorizontalAlignment="Left" Margin="478,421,0,0" VerticalAlignment="Top" Width="155" RenderTransformOrigin="2.868,8.591" Height="51" FontSize="22" Click="onRegisterClick"/>
        <TextBox x:Name="loginTextBox" HorizontalAlignment="Left" Height="35" Margin="521,133,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="324" FontSize="22"/>
        <Label Content="Login" HorizontalAlignment="Left" Margin="269,129,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.299,0.858" FontSize="22"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="269,195,0,0" VerticalAlignment="Top" FontSize="22"/>
