        <Label Content="E-mail" HorizontalAlignment="Left" Margin="269,258,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.299,0.858" FontSize="22"/>
        <PasswordBox x:Name="passwordTextBox" HorizontalAlignment="Left" Margin="521,199,0,0" VerticalAlignment="Top" Width="324" Height="35" FontSize="22"/>
        <Label Content="Age" HorizontalAlignment="Left" Margin="269,325,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.299,0.858" FontSize="22"/>
        <ComboBox x:Name="ageComboBox" HorizontalAlignment="Left" Margin="521,328,0,0" VerticalAlignment="Top" Width="120" Height="36" FontSize="22"/>

    </Grid>
</Window>
