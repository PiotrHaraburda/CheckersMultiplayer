<Window x:Class="CheckersMultiplayer.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CheckersMultiplayer"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="CheckersMultiplayer Registration" Height="506.125" Width="901.125">

    <Grid>
        <Button x:Name="signUpButton" Content="Sign Up" HorizontalAlignment="Left" Margin="266,388,0,0" VerticalAlignment="Top" Width="155" RenderTransformOrigin="2.868,8.591" Height="51" FontSize="22" Click="signUpButton_Click"/>
        <TextBox x:Name="loginTextBox" HorizontalAlignment="Left" Height="35" Margin="288,97,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="324" FontSize="22"/>
        <Label x:Name="loginLabel" Content="Login" HorizontalAlignment="Left" Margin="36,93,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.299,0.858" FontSize="22"/>
        <Label x:Name="passwordLabel" Content="Password" HorizontalAlignment="Left" Margin="36,159,0,0" VerticalAlignment="Top" FontSize="22"/>
        <TextBox x:Name="nameTextBox" HorizontalAlignment="Left" Height="36" Margin="288,31,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="324" FontSize="22"/>
        <Label x:Name="nameLabel" Content="Name" HorizontalAlignment="Left" Margin="36,27,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.299,0.858" FontSize="22"/>
        <TextBox x:Name="emailTextBox" HorizontalAlignment="Left" Height="36" Margin="288,226,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="324" FontSize="22"/>
        <Label x:Name="emailLabel" Content="E-mail" HorizontalAlignment="Left" Margin="36,222,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.299,0.858" FontSize="22"/>
        <PasswordBox x:Name="passwordTextBox" HorizontalAlignment="Left" Margin="288,163,0,0" VerticalAlignment="Top" Width="324" Height="35" FontSize="22"/>
        <Label x:Name="ageLabel" Content="Age" HorizontalAlignment="Left" Margin="36,289,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.299,0.858" FontSize="22"/>
        <ComboBox x:Name="ageComboBox" HorizontalAlignment="Left" Margin="288,292,0,0" VerticalAlignment="Top" Width="120" Height="36" FontSize="22"/>
        <Button x:Name="signInButton" Content="Sign In" HorizontalAlignment="Left" Margin="736,83,0,0" VerticalAlignment="Top" Width="118" Height="59" FontSize="22" Click="signInButton_Click"/>
        <Label Content="Already registered?" HorizontalAlignment="Left" Margin="723,36,0,0" VerticalAlignment="Top" FontSize="16" RenderTransformOrigin="0.158,1.224"/>
        <Label x:Name="accountCreatedLabel" Content="Your account has been created successfully!" HorizontalAlignment="Left" Margin="249,153,0,0" VerticalAlignment="Top" Visibility="Hidden"/>

    </Grid>
</Window>
